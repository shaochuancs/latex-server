{
  "name": "latex-server",
  "version": "1.0.0",
  "description": "Web application providing LaTeX typesetting service",
  "scripts": {
    "build": "npx webpack",
    "buildDev": "npx webpack --watch",
    "start": "node dist/bundle.js",
    "startDev": "nodemon --watch dist/bundle.js dist/bundle.js",
    "pretest": "npx eslint --ext .ts,.js ./",
    "test": "npx jest && npx coveralls < coverage/lcov.info && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shaochuancs/latex-server.git"
  },
  "keywords": [
    "LaTeX",
    "typesetting"
  ],
  "author": "Chuan Shao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shaochuancs/latex-server/issues"
  },
  "homepage": "https://github.com/shaochuancs/latex-server#readme",
  "dependencies": {
    "esserializer": "^1.2.4",
    "express": "^4.17.1",
    "log4js": "^6.3.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-jest": "^27.4.4",
    "coveralls": "^3.1.1",
    "eslint": "^8.4.1",
    "jest": "^27.4.4",
    "nodemon": "^2.0.15",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
